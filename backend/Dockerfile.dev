FROM rust:1.75-slim

WORKDIR /app

# システムの依存関係をインストール
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# cargo-watch をインストール
RUN cargo install cargo-watch

# 依存関係をコピーしてビルド (キャッシュ最適化)
COPY Cargo.toml Cargo.lock ./
RUN mkdir src && echo "fn main() {}" > src/main.rs
RUN cargo build
RUN rm src/main.rs

# ソースコードをコピー
COPY . .

CMD ["cargo", "watch", "-x", "run"] 